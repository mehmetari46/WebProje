@model WebProje.Models.ModelSahiplen
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hayvan Sahiplenme Formu</title>
    <link rel="stylesheet" href="~/css/animal.css" asp-append-version="true" />
</head>
<body>
    <div class="form-container">
        <h1>Hayvan Sahiplenme Formu</h1>
        <form>
            <div class="form-group">
                <label for="name">İsim-Soyisim:</label>
                <input type="text" id="name" name="name" required>
                <span asp-validation-for="IsimSoyisim"></span>
            </div>
            <div class="form-group">
                <label for="email">E-posta:</label>
                <input type="email" id="email" name="email" required>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label for="phone">Telefon Numarası:</label>
                <input type="tel" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                <span asp-validation-for="TelNo"></span>
            </div>
            <div class="form-group">
                <label for="animal_id">Hayvan ID:</label>
                <input type="text" id="animal_id" name="animal_id" required>
                <span asp-validation-for="HayvanID"></span>
            </div>
            <div class="form-group">
                <label for="address">Adres:</label>
                <input type="text" id="address" name="address" required>
                <span asp-validation-for="Adres"></span>
            </div>
            <div class="form-group">
                <label for="password">Şifre:</label>
                <input type="password" id="password" name="password" required>
                <span asp-validation-for="Sifre"></span>
            </div>
            <button type="submit">Sahiplen</button>
        </form>
    </div>
</body>
</html>