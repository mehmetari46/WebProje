@model IEnumerable<WebProje.Models.ModelHayvanKabul>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hayvanlar Liste</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <header>
        <nav class="sidebar">
            <div>
                <h2 style="color:cornflowerblue; text-align:center;">HAYVAN BARINAĞI</h2>
                <br /><br />
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="fa-solid fa-tent sidebarField" asp-area="" asp-controller="Admin" asp-action="Index"><span>Sahiplenme Istek</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa-solid fa-people-roof sidebarField" asp-area="" asp-controller="Admin" asp-action="Admin_Kabul"><span>Kabul Istekleri</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa-solid fa-person-shelter sidebarField" asp-area="" asp-controller="Admin" asp-action="Admin_Users"><span>Kullanicilar</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa-solid fa-dog sidebarField" asp-area="" asp-controller="Admin" asp-action="Animals"><span>Hayvanlar</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="table-container">
        <h2>Hayvan Listesi</h2>
        <table>
            <thead>
                <tr>
                    <th>Hayvan ID</th>
                    <th>İsim</th>
                    <th>Yaş</th>
                    <th>Cinsiyet</th>
                    <th>Tür</th>
                    <th>Güncelleme</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.HayvanID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Animal_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Animal_Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.Animal_Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Animal_Kind)</td>
                        <td>
                            <a href="/Admin/EditAnimal/@item.HayvanID"><button type="submit" class="btn btn-danger"><span>Update</span></button></a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


