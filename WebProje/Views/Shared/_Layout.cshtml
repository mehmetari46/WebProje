<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProje.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/9777cc5a96.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="sidebar">
            <div>
                <h2 style="color:cornflowerblue; text-align:center;">HAYVAN BARINAĞI</h2>
                <br /><br />
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="fa fa-fw fa-home sidebarField" asp-area="" asp-controller="Animal" asp-action="Index"><span>Anasayfa</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa-solid fa-dog sidebarField" asp-area="" asp-controller="Sahiplenme" asp-action="Index"><span>Hayvan Sahiplenme</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa-solid fa-cat sidebarField" asp-area="" asp-controller="Kabul" asp-action="Index"><span>Hayvan Kabul</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa fa-fw fa-user sidebarField" asp-area="" asp-controller="Login" asp-action="Index"><span>Giris</span></a>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="fa-solid fa-chalkboard sidebarField" asp-area="" asp-controller="Takip" asp-action="Index"><span>Basvuru Takip</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
